{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"noImplicitAny": false,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"allowJs": true,
		"sourceMap": true,
		"outDir": "dist/server",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"server/types/*"
			]
		}
	},
	"include": [
		"decorator/**/*",
		"server/**/*",
		"server/app.ts"
	],
	"exclude": [
		"node_modules"
	],
	"jscopy": [
		"template"
	]
}
