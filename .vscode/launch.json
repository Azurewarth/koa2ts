{
    "version": "0.0.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Node调试",
        "runtimeExecutable": "nodemon",
        "program": "${workspaceFolder}/dist/server/app.js",
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "program": "${workspaceFolder}/dist/server/app.js",
        "preLaunchTask": "npm: build",
        "outFiles": [
          "${workspaceFolder}/dist/**/*.js"
        ],
        "sourceMaps": true
      }
    ]
  }